<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_16">

        <ImageView
            android:id="@+id/iv_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_warning"
            app:layout_constraintBottom_toBottomOf="@+id/iv_warning"
            app:layout_constraintEnd_toEndOf="@+id/iv_warning"
            app:layout_constraintStart_toStartOf="@+id/iv_warning"
            app:layout_constraintTop_toTopOf="@+id/iv_warning" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:fontFamily="@font/helvetica_neue_medium"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_16sp"
            app:layout_constraintStart_toEndOf="@+id/iv_warning"
            app:layout_constraintTop_toTopOf="@+id/iv_warning" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="1/3 values read"
            android:textColor="@color/colorLightGrey"
            android:textSize="@dimen/text_14sp"
            app:layout_constraintStart_toStartOf="@+id/text1"
            app:layout_constraintTop_toBottomOf="@+id/text1" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/text2"
            app:layout_constraintTop_toBottomOf="@+id/text2" />

        <ImageView
            android:id="@+id/toggle_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_20"
            app:layout_constraintBottom_toBottomOf="@+id/text3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text3" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow"
            android:padding="@dimen/dimen_5"
            app:layout_constraintBottom_toBottomOf="@+id/toggle_btn"
            app:layout_constraintEnd_toEndOf="@+id/toggle_btn"
            app:layout_constraintStart_toStartOf="@+id/toggle_btn"
            app:layout_constraintTop_toTopOf="@+id/toggle_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_green_border"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingTop="1dp"
            android:paddingRight="@dimen/dimen_10"
            android:paddingBottom="1dp"
            android:text="0 % "
            android:textColor="@color/colorSkyBlue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <!-- <androidx.recyclerview.widget.RecyclerView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
